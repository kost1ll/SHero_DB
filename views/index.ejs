<%- include('layout/header') %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
                <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong><%= message.message %></strong>
                </div>
            <% } %>
            <div class="table-responsive">
                <% if (heroes != '') { %>
                    <table class="table table-striped text-center my-4">
                        <thead>
                        <tr class="table-dark">
                            <th>ID</th>
                            <th>Image</th>
                            <th>Nickname</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% heroes.forEach((row, index) => { %>
                            <tr class="align-middle">
                                <td><%= index %></td>
                                <td><img src="<%= row.image %>" width="100" class="img-thumbnail"></td>
                                <td><a class="link-dark" href="/view/<%= row.id %>"><%= row.nickname %></a></td>
                                <td>
                                    <a href="/edit/<%= row.id %>" class="text-success"><i
                                                class="fas fa-edit fa-lg mx-1 my-3"></i></a>
                                    <a href="/delete/<%= row.id %>" class="text-danger"><i
                                                class="fas fa-trash fa-lg mx-1 my-3"></i></a>
                                </td>
                            </tr>
                        <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No heroes found in DB</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>
